						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"product_id\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/subscriptions",
							"host": ["{{base_url}}"],
							"path": ["api", "subscriptions"]
						},
						"description": "Create a new subscription for a product. Status will be 'pending' until payment."
					},
					"response": []
