								{
									"key": "min_price",
									"value": "0",
									"description": "Minimum price filter"
								},
								{
									"key": "max_price",
									"value": "1000",
									"description": "Maximum price filter"
								},
								{
									"key": "search",
									"value": "",
									"description": "Search by title"
								},
								{
									"key": "sort_by",
									"value": "created_at",
									"description": "Sort field (title, price, created_at)"
								},
								{
									"key": "sort_order",
									"value": "desc",
									"description": "Sort order (asc/desc)"
