									"value": "29.99",
									"type": "text"
								},
								{
									"key": "status",
									"value": "active",
									"type": "text"
								},
								{
									"key": "duration_days",
									"value": "30",
									"type": "text"
								},
								{
									"key": "file",
									"type": "file",
									"src": "",
									"description": "Optional product image (jpeg, jpg, png, pdf)"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/products",
							"host": ["{{base_url}}"],
							"path": ["api", "products"]
						},
						"description": "Create a new product with optional file upload."
					},
					"response": []
				},
				{
					"name": "Get Product",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/products/1",
							"host": ["{{base_url}}"],
							"path": ["api", "products", "1"]
						},
						"description": "Get details of a specific product by ID."
					},
					"response": []
				},
				{
					"name": "Update Product",
					"request": {
						"method": "PUT",
