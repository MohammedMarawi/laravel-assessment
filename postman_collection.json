		},
		{
			"name": "Webhooks",
			"description": "Stripe webhook endpoint (for testing)",
			"item": [
				{
					"name": "Stripe Webhook",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Stripe-Signature",
								"value": "t=xxx,v1=xxx",
								"description": "Required Stripe signature header"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"evt_test_xxx\",\n    \"type\": \"checkout.session.completed\",\n    \"data\": {\n        \"object\": {\n            \"id\": \"cs_test_xxx\",\n            \"payment_intent\": \"pi_test_xxx\",\n            \"client_reference_id\": \"1\",\n            \"metadata\": {\n                \"subscription_id\": \"1\",\n                \"payment_id\": \"1\",\n                \"user_id\": \"1\"\n            }\n        }\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/webhook/stripe",
							"host": ["{{base_url}}"],
							"path": ["api", "webhook", "stripe"]
						},
						"description": "Stripe webhook endpoint. Requires valid Stripe-Signature header.\n\nSupported events:\n- checkout.session.completed\n- invoice.payment_succeeded\n- customer.subscription.updated\n- customer.subscription.deleted\n- payment_intent.payment_failed"
					},
					"response": []
				}
			]
		}
	]
