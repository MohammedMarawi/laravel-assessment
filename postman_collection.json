							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Product Title\",\n    \"description\": \"Updated description\",\n    \"price\": 39.99,\n    \"status\": \"active\",\n    \"duration_days\": 60\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/products/1",
							"host": ["{{base_url}}"],
							"path": ["api", "products", "1"]
						},
						"description": "Update an existing product. All fields are optional (partial update)."
					},
					"response": []
				},
				{
					"name": "Delete Product",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/products/1",
							"host": ["{{base_url}}"],
							"path": ["api", "products", "1"]
						},
						"description": "Soft delete a product by ID."
					},
					"response": []
				}
			]
		},
		{
			"name": "Subscriptions",
			"description": "Subscription management endpoints",
			"item": [
